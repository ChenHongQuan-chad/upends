{% endcomment %}

{% if label != blank %}
  {% if type == "link" %}
<a {% if href != blank %}href="{{ href }}"{% endif %} class="button {{ style }} {{ class }}" {{ attribute }}><span>{{ label }}</span> <i class="fa fa-angle-right" aria-hidden="true"></i></a>
  {% else %}
<button type="{{ type }}" class="button {{ style }} {{ class }}" {{ attribute }}><span>{{ label }}</span> <i class="fa fa-angle-right" aria-hidden="true"></i></button>
  {% endif %}
{% endif %}
