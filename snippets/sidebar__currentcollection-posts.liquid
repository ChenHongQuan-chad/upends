
{% assign new_handle = article.handle | split: '/' %}

<!-- {{ new_handle[0] }} -->

{% if block.settings.title != blank %}
  <div data-has-toggle-option>
    <h3 class="sidebar-block__heading" {% if settings.toggle_sidebar %}data-sidebar-block__toggle="closed" aria-label="toggle"{% endif %}>
      {{ block.settings.title }}
      {% if settings.toggle_sidebar %}
        <button class="sidebar-block__toggle-icon icon-style--{{ settings.toggle_icon_style }}">
          {% if settings.toggle_icon_style == 'plus_and_minus' %}
            {% include settings.icon, name: 'plus', icon_class: 'icon--active' %}
            {% include settings.icon, name: 'minus' %}
          {% else %}
            {% include settings.icon, name: 'down-caret', icon_class: 'icon--active' %}
          {% endif %}
        </button>
      {% endif %}
    </h3>
  </div>
{% endif %}


<div class="sidebar-block__content"  {% if settings.toggle_sidebar %}data-sidebar-block__content--collapsible{% endif %}>
  <div id="swiper-mobile" class="swiper-container">
    <div class="swiper-wrapper">
      <a href="/products/upbar-rs" class="swiper-slide" target="_blank">
        <!-- <div class="img-box" > <img src="https://cdn.shopify.com/s/files/1/0283/9815/7955/files/433.gif?v=1648893207"></div> -->
      	<div class="img-box" > <img src="https://cdn.shopify.com/s/files/1/0283/9815/7955/files/upbar-rs.gif?v=1648892182"></div>
      </a>
      <a href="/pages/retail-wholesale-program"  class="swiper-slide" target="_blank">
      <div class="img-box"> <img src="https://cdn.shopifycdn.net/s/files/1/0283/9815/7955/files/002.gif?v=1634185654"></div>
        </a>
       <a href="/pages/retail-wholesale-program"  class="swiper-slide" target="_blank">
        <div class="img-box"> <img src="https://cdn.shopify.com/s/files/1/0283/9815/7955/files/280381.gif?v=1637907470"></div>
    </a>
    </div>
  </div>
  
  <script>
    var swiper3 = new Swiper('#swiper-mobile', {
      slidesPerView: 1,
      autoplay:true
    });
  </script>
  {% for article in blogs[new_handle[0]].articles limit: block.settings.blog_post_count %}
    <div class="sidebar-block__recent-post">
      <a href="{{ article.url }}" title="{{ article.title | escape }}">{{ article.title }}</a>
      <div class="meta">
        <span class="label">{{ article.published_at | date: format: "month_day_year" }}</span>
      </div>
    </div>
  {% endfor %}
</div>
